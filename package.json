{
  "name": "web-backend",
  "version": "1.0.0",
  "description": "Web后端服务系统",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "docs": "apidoc -i src/ -o docs/",
    "docs:api": "node scripts/generate-api-docs.js",
    "docs:test": "node scripts/generate-test-docs.js",
    "docs:serve": "serve docs"
  },
  "author": "Kingston",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.6",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "apidoc": "^1.2.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "keywords": [],
  "apidoc": {
    "title": "项目管理系统 API 文档",
    "version": "1.0.0",
    "description": "项目管理系统的 RESTful API 文档",
    "url": "http://localhost:3000",
    "sampleUrl": "http://localhost:3000",
    "template": {
      "withGenerator": false,
      "withCompare": true
    }
  }
}
